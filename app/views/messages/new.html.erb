<%= form_tag(messages_path, method: 'post') do %>
    
    <div class="row">
      <div class="col-md-7">
        <div class="form-group row">
          <label class="col-md-2 col-sm-2 col-xs-2 col-form-label">To:</label>
          <div class="col-md-10">
            <div class="form-control" id="recipients-list">
              
            </div>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-md-2 col-sm-2 col-xs-2 col-form-label">Subject:</label>
          <div class="col-md-10">
            <%= text_field_tag :subject, nil, class:'form-control', placeholder:'Message Subject', type:'text' %>       
          </div>
        </div>
        <div class="form-group row">
          <label class="col-md-2 col-sm-2 col-xs-2 col-form-label">Content:</label>
          <div class="col-md-10">
            <%= text_area_tag :content, nil, class:'form-control', placeholder:'What do you wanna tell your friends?', type:'text' %> 
          </div>      
        </div>
        <div class="row">
        <div class="col-md-2">
          
        </div>
          <div class="col-md-3 col-md-offset-2">
            <%= submit_tag("Send message", :class=>"btn btn-primary") %>  
          </div>          
        </div>
        
      </div>
      <div class="col-md-5">
        <div class="form-control">
          <%= render '/relationships/friend_list' %>
        </div>
      </div>
      
    </div>
    

<% end %>